<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    tools:context=".ApplyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/hospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hastane İsmi"
        android:padding="15dp"
        />
        <TextView
            android:id="@+id/bloodGroupApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hospitalName"
            android:text="Kan Grubu"
            android:padding="15dp"
            />
        <TextView
            android:id="@+id/patientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodGroupApply"
            android:text="Hasta İsmi"
            android:padding="15dp"
            />
        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/patientName"
            android:onClick="btnApplyDonor"
            android:text="Kan Bağışını Yap" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>